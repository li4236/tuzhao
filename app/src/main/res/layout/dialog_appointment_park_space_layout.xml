<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="332dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/w0_all_10dp">

        <TextView
            android:id="@+id/select_date"
            style="@style/ThirtyTextB1Style"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="选择日期"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/estimated_arrival_time"
            style="@style/ThirtyTextB1Style"
            android:text="预计到达"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/select_date" />

        <TextView
            android:id="@+id/estimated_park_time"
            style="@style/ThirtyTextB1Style"
            android:layout_marginEnd="30dp"
            android:text="预停时长"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/select_date" />

        <View
            android:id="@+id/top_divider"
            style="@style/dividerStyle"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/estimated_arrival_time" />

        <com.tianzhili.www.myselfsdk.pickerview.lib.WheelView
            android:id="@+id/options1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="28dp"
            app:layout_constraintEnd_toEndOf="@id/select_date"
            app:layout_constraintStart_toStartOf="@id/select_date"
            app:layout_constraintTop_toBottomOf="@+id/top_divider" />

        <com.tianzhili.www.myselfsdk.pickerview.lib.WheelView
            android:id="@+id/options2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/options1" />

        <com.tianzhili.www.myselfsdk.pickerview.lib.WheelView
            android:id="@+id/options3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@+id/estimated_park_time"
            app:layout_constraintStart_toStartOf="@+id/estimated_park_time" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/confirm_appointment"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:contentDescription="@string/picture_description"
        android:src="@drawable/ic_confirm"
        app:layout_constraintBottom_toBottomOf="@+id/top_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_cl" />

</android.support.constraint.ConstraintLayout>