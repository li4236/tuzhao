<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_item_cancleparkorder_layout_linearlayout_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_quxiaop"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/id_item_cancleparkorder_layout_textview_parkspace_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/b1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/id_item_cancleparkorder_layout_textview_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/g3"/>

        <ImageView
            android:id="@+id/id_item_cancleparkorder_layout_imageview_delete_order"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_del"
            android:scaleType="fitCenter"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_item_cancleparkorder_layout_linearlayout_orderdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/w2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/id_item_cancleparkorder_layout_imageview_bigshow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/id_item_cancleparkorder_layout_textview_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/b1"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/id_item_cancleparkorder_layout_textview_address_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="17"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/b1"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_item_cancleparkorder_layout_textview_carnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/b1"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/id_item_cancleparkorder_layout_textview_startime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="11dp"
            android:textSize="13sp"
            android:textColor="@color/b1"/>

        <TextView
            android:id="@+id/id_item_cancleparkorder_layout_textview_rent_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次租用"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="11dp"
            android:paddingLeft="11dp"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="@color/r2"
            android:background="@drawable/yuan_little_line_red_12dp"/>
    </LinearLayout>
</LinearLayout>