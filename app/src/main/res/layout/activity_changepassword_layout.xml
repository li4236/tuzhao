<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_activity_changepassword_layout_imageview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_left" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_activity_changepassword_layout_linearlayout_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/id_activity_changepassword_layout_edittext_oldconfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入收到的验证码"
                android:inputType="number"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/id_activity_changepassword_layout_textview_oldgetconfirm"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:background="@drawable/little_yuan_yellow_5dp"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="获取验证码"
                android:textColor="@color/b1"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_activity_changepassword_layout_textview_turntopass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="9dp"
            android:text="原手机号失效？"
            android:textColor="@color/g6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_activity_changepassword_layout_textview_oldgonext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/little_yuan_yellow_8dp"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="下一步"
            android:textColor="@color/b1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_activity_changepassword_layout_linearlayout_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/id_activity_changepassword_layout_edittext_oldpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入旧密码"
                android:inputType="textPassword"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/id_activity_changepassword_layout_imageview_oldpassclean"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_close2"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_activity_changepassword_layout_textview_oldpassgonext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/little_yuan_yellow_8dp"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="下一步"
            android:textColor="@color/b1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_activity_changepassword_layout_linearlayout_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="新密码"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/id_activity_changepassword_layout_edittext_newpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入8-20位新密码"
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/id_activity_changepassword_layout_imageview_newclean"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_close2"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_activity_changepassword_layout_textview_gochange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/little_yuan_yellow_8dp"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="确认修改"
            android:textColor="@color/b1"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>