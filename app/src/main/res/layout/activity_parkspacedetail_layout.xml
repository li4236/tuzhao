<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0">

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/id_activity_parkspacedetail_layout_pagetab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="@color/nocolor"
            app:stl_defaultTabTextAllCaps="true"
            app:stl_defaultTabTextColor="@color/tab_view_turn_color"
            app:stl_defaultTabTextHorizontalPadding="5dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_defaultTabTextSize="15sp"
            app:stl_distributeEvenly="true"
            app:stl_dividerThickness="0dp"
            app:stl_drawDecorationAfterTab="false"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="@color/b1"
            app:stl_indicatorCornerRadius="1dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="false"
            app:stl_overlineThickness="0dp"
            app:stl_titleOffset="24dp"
            app:stl_underlineThickness="0dp" />

        <ImageView
            android:id="@+id/id_activity_parkspacedetail_imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_left" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_activity_parkspacedetail_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"/>
</LinearLayout>