<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/w0_all_10dp">

        <TextView
            android:id="@+id/first_item"
            style="@style/TwentyTextB1Style"
            android:layout_width="0dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="支付宝"
            android:textColor="@color/blue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/exchang_divider"
            style="@style/dividerStyle"
            app:layout_constraintTop_toBottomOf="@+id/first_item" />

        <TextView
            android:id="@+id/second_item"
            style="@style/TwentyTextB1Style"
            android:layout_width="0dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="微信"
            android:textColor="@color/blue2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exchang_divider" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/cancel_tv"
        style="@style/TwentyTextB1Style"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_all_10dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="取消"
        android:textColor="@color/blue2" />

</LinearLayout>