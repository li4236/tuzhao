<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_activity_getmoney_imageview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_left" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_activity_getmoney_layout_linearlayout_getmoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现金额（元）"
                android:textColor="@color/b1"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="将提现至已绑定的"
                android:textColor="@color/b1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/id_activity_getmoney_layout_textview_alinumble"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text=" 支付宝账号"
                android:textColor="@color/blue2"
                android:textSize="10sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/id_activity_getmoney_layout_edittext_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:textColor="@color/b1"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_activity_getmoney_layout_textview_allbalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/b1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/id_activity_getmoney_layout_textview_getallbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="全部提现"
                android:textColor="@color/b1"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_activity_getmoney_layout_textview_tixian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/little_yuan_yellow_8dp"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="提现"
            android:textColor="@color/b1"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_activity_getmoney_layout_linearlayout_edit_alinumble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现账号"
            android:textColor="@color/b1"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/id_activity_getmoney_layout_edittext_alinumble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:hint="支付宝账号"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingTop="22dp"
            android:textColor="@color/b1"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="要认真填写支付宝账号，不要写错哦"
            android:textColor="@color/b1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/id_activity_getmoney_layout_textview_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/little_yuan_yellow_8dp"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="下一步"
            android:textColor="@color/b1"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>