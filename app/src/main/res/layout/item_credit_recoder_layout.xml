<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/w0"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/credit_diversification"
        style="@style/FortyTextB1Style"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/credit_update_date"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/credit_diversification"
        app:layout_constraintTop_toBottomOf="@+id/credit_diversification" />

    <TextView
        android:id="@+id/credit_text"
        style="@style/FortyTextB1Style"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/credit_diversification"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/encourage_word"
        style="@style/TenTextG6Stytle"
        app:layout_constraintBottom_toBottomOf="@+id/credit_update_date"
        app:layout_constraintEnd_toEndOf="@id/credit_text" />

</android.support.constraint.ConstraintLayout>