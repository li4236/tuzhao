<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_park_detail_cl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/w0"
    android:minWidth="260dp">

    <TextView
        android:id="@+id/dialog_park_detail"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="12dp"
        android:text="停车详情"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_dismiss"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/picture_description"
        android:padding="12dp"
        android:src="@mipmap/ic_close1"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_park_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_park_detail" />

    <View
        android:id="@+id/detail_top_divider"
        style="@style/dividerStyle"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_park_detail" />

    <TextView
        android:id="@+id/appointment_start_park_time_tv"
        style="@style/TwentyTextB1Style"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="预约进场"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_top_divider" />

    <TextView
        android:id="@+id/appointment_start_park_time"
        style="@style/TwentyTextB1Style"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appointment_start_park_time_tv" />

    <TextView
        android:id="@+id/actual_start_park_time_tv"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="15dp"
        android:text="实际进场"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/appointment_start_park_time_tv" />

    <TextView
        android:id="@+id/actual_start_park_time"
        style="@style/TwentyTextB1Style"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time"
        app:layout_constraintTop_toTopOf="@+id/actual_start_park_time_tv" />

    <TextView
        android:id="@+id/appointment_park_duration_tv"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="15dp"
        android:text="预计停车"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/actual_start_park_time_tv" />

    <TextView
        android:id="@+id/appointment_park_duration"
        style="@style/TwentyTextB1Style"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time"
        app:layout_constraintTop_toTopOf="@+id/appointment_park_duration_tv" />

    <TextView
        android:id="@+id/actual_park_duration_tv"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="15dp"
        android:text="实际停车"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/appointment_park_duration_tv" />

    <TextView
        android:id="@+id/actual_park_duration"
        style="@style/TwentyTextB1Style"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time"
        app:layout_constraintTop_toTopOf="@+id/actual_park_duration_tv" />

    <TextView
        android:id="@+id/grace_period_tv"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="15dp"
        android:text="宽限时长"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/actual_park_duration_tv" />

    <TextView
        android:id="@+id/grace_period"
        style="@style/TwentyTextB1Style"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time"
        app:layout_constraintTop_toTopOf="@+id/grace_period_tv" />

    <TextView
        android:id="@+id/overtime_duration_tv"
        style="@style/TwentyTextB1Style"
        android:paddingTop="15dp"
        android:text="超时时长"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/grace_period_tv" />

    <TextView
        android:id="@+id/overtime_duration"
        style="@style/TwentyTextB1Style"
        app:layout_constraintBottom_toBottomOf="@+id/overtime_duration_tv"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time" />

    <TextView
        android:id="@+id/overtime_fee_tv"
        style="@style/TwentyTextB1Style"
        android:paddingTop="15dp"
        android:text="超时费用"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/overtime_duration_tv" />

    <TextView
        android:id="@+id/overtime_fee"
        style="@style/TwentyTextB1Style"
        app:layout_constraintBottom_toBottomOf="@+id/overtime_fee_tv"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time" />

    <TextView
        android:id="@+id/park_fee_tv"
        style="@style/TwentyTextB1Style"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="停车费用"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/appointment_start_park_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/overtime_fee_tv" />

    <TextView
        android:id="@+id/park_fee"
        style="@style/TwentyTextB1Style"
        app:layout_constraintBottom_toBottomOf="@+id/park_fee_tv"
        app:layout_constraintEnd_toEndOf="@id/appointment_start_park_time"
        app:layout_constraintTop_toTopOf="@+id/park_fee_tv" />

</android.support.constraint.ConstraintLayout>