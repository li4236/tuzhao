<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/w0"
        android:padding="8dp"
        android:textColor="@color/b1"
        android:textSize="12sp"
        app:layout_constraintCircleAngle="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tuzhao.publicwidget.customView.ArcView
        android:layout_width="16dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="@id/info_window_title"
        app:layout_constraintStart_toStartOf="@id/info_window_title"
        app:layout_constraintTop_toBottomOf="@+id/info_window_title" />

</android.support.constraint.ConstraintLayout>