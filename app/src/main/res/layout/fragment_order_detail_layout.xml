<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/w0"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/park_info_detail"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="12dp"
            android:text="停车明细"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pay_for_order_question"
            style="@style/TenTextG6Stytle"
            android:drawableEnd="@drawable/ic_question"
            android:drawablePadding="6dp"
            android:paddingBottom="10dp"
            android:paddingEnd="18dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="计费有疑问"
            app:layout_constraintBottom_toBottomOf="@+id/park_info_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/park_info_detail" />

        <View
            android:id="@+id/bottom_divider"
            style="@style/dividerStyle"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/park_info_detail" />

        <ImageView
            android:id="@+id/pay_for_order_fee_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_where2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_divider" />

        <TextView
            android:id="@+id/pay_for_order_fee"
            style="@style/FortyTextB1Style"
            android:layout_marginTop="10dp"
            android:text="0.00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_fee_iv" />

        <TextView
            android:id="@+id/pay_for_order_discount"
            style="@style/TenTextG6Stytle"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="5dp"
            android:text="（无优惠劵）"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_fee" />

        <ImageView
            android:id="@+id/pay_for_order_time_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="56dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_into"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pay_for_order_fee_iv" />

        <TextView
            android:id="@+id/pay_for_order_time"
            style="@style/FortyTextB1Style"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/pay_for_order_time_iv"
            app:layout_constraintStart_toStartOf="@id/pay_for_order_time_iv"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_time_iv" />

        <TextView
            android:id="@+id/pay_for_order_time_description"
            style="@style/TenTextG6Stytle"
            android:layout_marginTop="5dp"
            android:text="（无超时）"
            app:layout_constraintEnd_toEndOf="@id/pay_for_order_time"
            app:layout_constraintStart_toStartOf="@id/pay_for_order_time"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_time" />

        <ImageView
            android:id="@+id/pay_for_order_credit_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="56dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_order_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pay_for_order_fee_iv" />

        <TextView
            android:id="@+id/pay_for_order_credit"
            style="@style/FortyTextG7Style"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/pay_for_order_credit_iv"
            app:layout_constraintStart_toStartOf="@+id/pay_for_order_credit_iv"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_fee_iv" />

        <TextView
            android:id="@+id/pay_for_order_total_credit"
            style="@style/TenTextG6Stytle"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/pay_for_order_credit"
            app:layout_constraintStart_toStartOf="@+id/pay_for_order_credit"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_credit" />

        <View
            android:id="@+id/park_hint_divider"
            style="@style/dividerStyle"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_for_order_total_credit" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contact_service_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/park_hint_divider">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/picture_description"
                android:src="@drawable/ic_call"
                app:layout_constraintBottom_toBottomOf="@+id/contact_service"
                app:layout_constraintEnd_toStartOf="@+id/contact_service"
                app:layout_constraintTop_toTopOf="@+id/contact_service" />

            <TextView
                android:id="@+id/contact_service"
                style="@style/TenTextG6Stytle"
                android:text="联系客服"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/car_pic_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/pay_for_order_time_iv"
            app:layout_constraintStart_toStartOf="@+id/pay_for_order_time_iv"
            app:layout_constraintTop_toTopOf="@+id/contact_service_cl">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/picture_description"
                android:src="@drawable/ic_pic1"
                app:layout_constraintBottom_toBottomOf="@+id/car_pic"
                app:layout_constraintEnd_toStartOf="@+id/car_pic"
                app:layout_constraintTop_toTopOf="@+id/car_pic" />

            <TextView
                android:id="@+id/car_pic"
                style="@style/TenTextG6Stytle"
                android:text="车位图片"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/delete_order_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/pay_for_order_credit_iv"
            app:layout_constraintStart_toStartOf="@+id/pay_for_order_credit_iv"
            app:layout_constraintTop_toTopOf="@+id/contact_service_cl">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/picture_description"
                android:src="@drawable/ic_cancel"
                app:layout_constraintBottom_toBottomOf="@+id/delete_order"
                app:layout_constraintEnd_toStartOf="@+id/delete_order"
                app:layout_constraintTop_toTopOf="@+id/delete_order" />

            <TextView
                android:id="@+id/delete_order"
                style="@style/TenTextG6Stytle"
                android:text="取消预约"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/actual_detail_divider"
            style="@style/dividerStyle"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/park_hint_divider"
            app:layout_constraintStart_toStartOf="@id/park_hint_divider"
            app:layout_constraintTop_toBottomOf="@+id/contact_service_cl" />

        <TextView
            android:id="@+id/park_lot_name_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="车场名称"
            app:layout_constraintStart_toStartOf="@+id/actual_detail_divider"
            app:layout_constraintTop_toBottomOf="@+id/actual_detail_divider" />

        <TextView
            android:id="@+id/park_lot_name"
            style="@style/TwentyTextB1Style"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/actual_detail_divider"
            app:layout_constraintStart_toEndOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toTopOf="@+id/park_lot_name_tv" />

        <TextView
            android:id="@+id/park_space_number_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="车位编号"
            app:layout_constraintStart_toStartOf="@+id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/park_lot_name_tv" />

        <TextView
            android:id="@+id/park_space_number"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/park_space_number_tv" />

        <TextView
            android:id="@+id/actual_start_park_time_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="进场时间"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/park_space_number" />

        <TextView
            android:id="@+id/actual_start_park_time"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/actual_start_park_time_tv" />

        <TextView
            android:id="@+id/actual_park_duration_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="停车时长"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/actual_start_park_time_tv" />

        <TextView
            android:id="@+id/actual_park_duration"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/actual_park_duration_tv" />

        <TextView
            android:id="@+id/estimated_cost_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="预计费用"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/actual_park_duration_tv" />

        <TextView
            android:id="@+id/estimated_cost"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/estimated_cost_tv" />

        <View
            style="@style/dividerStyle"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/estimated_cost_tv" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>