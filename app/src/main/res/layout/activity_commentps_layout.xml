<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写评价"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_activity_commentps_layout_imageview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_left" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/id_activity_commentps_layout_imageview_psimg"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="fitXY" />
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你的评分"
                            android:textColor="@color/b1"
                            android:textSize="11sp" />

                        <com.cb.ratingbar.CBRatingBar
                            android:id="@+id/comment_order_crb"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            app:starCanTouch="true"
                            app:starCount="5"
                            app:starCoverColor="#ffcb30"
                            app:starEndColor="#00ff00"
                            app:starFillColor="#ffffff"
                            app:starMaxProgress="100"
                            app:starPathData="@string/round_star"
                            app:starPathDataId="@string/round_star"
                            app:starPointCount="5"
                            app:starProgress="20"
                            app:starShowStroke="true"
                            app:starSize="20dp"
                            app:starSpace="8dp"
                            app:starStartColor="#0000ff"
                            app:starStrokeColor="#ffcb30"
                            app:starStrokeWidth="2px"
                            app:starUseGradient="false" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="15dp"
                    android:background="@color/g7" />

                <EditText
                    android:id="@+id/comment_order_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="输入您评论的内容"
                    android:maxLength="150"
                    android:minHeight="100dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/b1"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/id_activity_commentps_layout_textview_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0/150"
                    android:textColor="@color/g6"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/g7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_activity_commentps_layout_imageview_add"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/ic_addimg" />

                    <RelativeLayout
                        android:id="@+id/id_activity_commentps_layout_relativelayout_img1"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="12dp"
                        android:visibility="gone">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/id_activity_commentps_layout_imageview_img1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="fitXY" />
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/id_activity_commentps_layout_imageview_del1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/ic_delimg" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/id_activity_commentps_layout_relativelayout_img2"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/id_activity_commentps_layout_imageview_img2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="fitXY" />
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/id_activity_commentps_layout_imageview_del2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/ic_delimg" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/id_activity_commentps_layout_relativelayout_img3"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/id_activity_commentps_layout_imageview_img3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="fitXY" />
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/id_activity_commentps_layout_imageview_del3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@mipmap/ic_delimg" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/id_activity_commentps_layout_textview_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/little_yuan_yellow_8dp"
                android:gravity="center"
                android:paddingBottom="11dp"
                android:paddingTop="11dp"
                android:text="提交评论"
                android:textColor="@color/b1"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>