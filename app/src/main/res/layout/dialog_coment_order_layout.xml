<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/w0"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/close_comment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/picture_description"
        android:padding="12dp"
        android:src="@drawable/ic_bigclose"
        app:layout_constraintBottom_toBottomOf="@+id/park_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/park_comment" />

    <TextView
        android:id="@+id/park_comment"
        style="@style/TwentyTextB1Style"
        android:text="停车评价"
        app:layout_constraintBottom_toTopOf="@+id/park_comment_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/park_comment_divider"
        style="@style/dividerStyle"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <ImageView
            android:id="@+id/comment_order_parkspace_iv"
