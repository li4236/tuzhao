<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/w0"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/appointment_detail"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="12dp"
        android:text="预约详情"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointment_calculate_rule"
        style="@style/TenTextG6Stytle"
        android:drawableEnd="@drawable/ic_question"
        android:drawablePadding="6dp"
        android:paddingBottom="10dp"
        android:paddingEnd="18dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="计费规则"
        app:layout_constraintBottom_toBottomOf="@+id/appointment_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appointment_detail" />

    <View
        android:id="@+id/bottom_divider"
        style="@style/dividerStyle"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_detail" />

    <ImageView
        android:id="@+id/pay_for_order_fee_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/picture_description"
        android:src="@drawable/ic_where2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_divider" />

    <TextView
        android:id="@+id/park_space_location"
        style="@style/FortyTextB1Style"
        android:layout_marginTop="10dp"
        android:text="地下一层"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_for_order_fee_iv" />

    <TextView
        android:id="@+id/pay_for_order_discount"
        style="@style/TenTextG6Stytle"
        android:layout_marginTop="5dp"
        android:text="(停车地点)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/park_space_location" />

    <ImageView
        android:id="@+id/start_park_time_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:contentDescription="@string/picture_description"
        android:src="@drawable/ic_into"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pay_for_order_fee_iv" />

    <TextView
        android:id="@+id/start_park_time"
        style="@style/FortyTextB1Style"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/start_park_time_iv"
        app:layout_constraintStart_toStartOf="@id/start_park_time_iv"
        app:layout_constraintTop_toBottomOf="@+id/start_park_time_iv" />

    <TextView
        android:id="@+id/pay_for_order_time_description"
        style="@style/TenTextG6Stytle"
        android:layout_marginTop="5dp"
        android:text="(进场时间)"
        app:layout_constraintEnd_toEndOf="@id/start_park_time"
        app:layout_constraintStart_toStartOf="@id/start_park_time"
        app:layout_constraintTop_toBottomOf="@+id/start_park_time" />

    <ImageView
        android:id="@+id/park_duration_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="56dp"
        android:contentDescription="@string/picture_description"
        android:src="@drawable/ic_order_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pay_for_order_fee_iv" />

    <TextView
        android:id="@+id/park_duration"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/park_duration_iv"
        app:layout_constraintStart_toStartOf="@+id/park_duration_iv"
        app:layout_constraintTop_toBottomOf="@+id/pay_for_order_fee_iv" />

    <TextView
        android:id="@+id/park_hint"
        style="@style/TenTextG6Stytle"
        android:layout_marginTop="5dp"
        android:text="(注意停车时长)"
        app:layout_constraintEnd_toEndOf="@+id/park_duration"
        app:layout_constraintStart_toStartOf="@+id/park_duration"
        app:layout_constraintTop_toBottomOf="@+id/park_duration" />

    <View
        android:id="@+id/park_hint_divider"
        style="@style/dividerStyle"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/park_hint" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/contact_service_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/park_hint_divider">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_call"
            app:layout_constraintBottom_toBottomOf="@+id/contact_service"
            app:layout_constraintEnd_toStartOf="@+id/contact_service"
            app:layout_constraintTop_toTopOf="@+id/contact_service" />

        <TextView
            android:id="@+id/contact_service"
            style="@style/TenTextG6Stytle"
            android:text="联系客服"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/car_pic_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/start_park_time_iv"
        app:layout_constraintStart_toStartOf="@+id/start_park_time_iv"
        app:layout_constraintTop_toTopOf="@+id/contact_service_cl">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_pic1"
            app:layout_constraintBottom_toBottomOf="@+id/car_pic"
            app:layout_constraintEnd_toStartOf="@+id/car_pic"
            app:layout_constraintTop_toTopOf="@+id/car_pic" />

        <TextView
            android:id="@+id/car_pic"
            style="@style/TenTextG6Stytle"
            android:text="车位图片"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cancel_appoint_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/park_duration_iv"
        app:layout_constraintStart_toStartOf="@+id/park_duration_iv"
        app:layout_constraintTop_toTopOf="@+id/contact_service_cl">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/cancel_appoint"
            app:layout_constraintEnd_toStartOf="@+id/cancel_appoint"
            app:layout_constraintTop_toTopOf="@+id/cancel_appoint" />

        <TextView
            android:id="@+id/cancel_appoint"
            style="@style/TenTextG6Stytle"
            android:text="取消预约"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/appointment_detail_divider"
        style="@style/dividerStyle"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="@id/park_hint_divider"
        app:layout_constraintStart_toStartOf="@id/park_hint_divider"
        app:layout_constraintTop_toBottomOf="@+id/contact_service_cl" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_appointment_detail_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingEnd="9dp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/appointment_detail_divider"
        app:layout_constraintTop_toBottomOf="@+id/appointment_detail_divider">

        <TextView
            android:id="@+id/view_appointment_detail"
            style="@style/TwentyTextG6Style"
            android:layout_marginEnd="6dp"
            android:text="查看预约详情"
            app:layout_constraintEnd_toStartOf="@+id/appointment_detail_iv" />

        <ImageView
            android:id="@+id/appointment_detail_iv"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:contentDescription="@string/picture_description"
            android:src="@drawable/ic_fold"
            app:layout_constraintBottom_toBottomOf="@+id/view_appointment_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_appointment_detail" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/appointment_detail_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="@+id/appointment_detail_divider"
        app:layout_constraintStart_toStartOf="@+id/appointment_detail_divider"
        app:layout_constraintTop_toBottomOf="@+id/view_appointment_detail_cl">

        <View
            android:id="@+id/detail_top_divider"
            style="@style/dividerStyle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/park_lot_name_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="车场名称"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_top_divider" />

        <TextView
            android:id="@+id/park_lot_name"
            style="@style/TwentyTextB1Style"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toTopOf="@+id/park_lot_name_tv" />

        <TextView
            android:id="@+id/park_space_number_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="车位编号"
            app:layout_constraintStart_toStartOf="@+id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/park_lot_name_tv" />

        <TextView
            android:id="@+id/park_space_number"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/park_space_number_tv" />

        <TextView
            android:id="@+id/appointment_start_park_time_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="预约进场"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/park_space_number" />

        <TextView
            android:id="@+id/appointment_start_park_time"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/appointment_start_park_time_tv" />

        <TextView
            android:id="@+id/appointment_park_duration_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="预停时长"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/appointment_start_park_time_tv" />

        <TextView
            android:id="@+id/appointment_park_duration"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/appointment_park_duration_tv" />

        <TextView
            android:id="@+id/estimated_cost_tv"
            style="@style/TwentyTextB1Style"
            android:layout_marginTop="15dp"
            android:text="预计费用"
            app:layout_constraintStart_toStartOf="@id/park_lot_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/appointment_park_duration_tv" />

        <TextView
            android:id="@+id/estimated_cost"
            style="@style/TwentyTextB1Style"
            app:layout_constraintEnd_toEndOf="@id/park_lot_name"
            app:layout_constraintTop_toTopOf="@+id/estimated_cost_tv" />

        <View
            style="@style/dividerStyle"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/estimated_cost_tv" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/open_lock"
        style="@style/SixtyTextB1Styel"
        android:layout_width="0dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/little_yuan_yellow_5dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="立即开锁"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_detail_cl" />

</android.support.constraint.ConstraintLayout>