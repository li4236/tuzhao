<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="83dp"
    android:layout_marginTop="18dp"
    android:clipChildren="false"
    app:ios="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:id="@+id/discount_cv"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_item_discount_layout_textview_topcolor"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/y3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@color/w0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clipChildren="false">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false">

                            <TextView
                                android:id="@+id/id_item_discount_layout_textview_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:text="15.3"
                                android:layout_centerInParent="true"
                                android:textColor="@color/y3"/>

                            <TextView
                                android:id="@+id/id_item_discount_layout_textview_yuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/id_item_discount_layout_textview_discount"
                                android:text="￥"
                                android:layout_marginRight="1px"
                                android:textSize="12sp"
                                android:textColor="@color/y3"
                                android:paddingTop="8dp"/>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/id_item_discount_layout_textview_minfee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:minWidth="80dp"
                            android:gravity="center"
                            android:textSize="11sp"
                            android:text="满多少元可用"
                            android:paddingLeft="28dp"
                            android:paddingRight="28dp"
                            android:textColor="@color/y3"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_item_discount_layout_textview_ispark"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2.2"
                                android:gravity="center_vertical"
                                android:textColor="@color/b1"
                                android:text="停车券"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/id_item_discount_layout_textview_effective_time"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1.6"
                                android:gravity="center_vertical"
                                android:textColor="@color/g6"
                                android:text="2018-02-23 * 2018-08-23"
                                android:textSize="11sp"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/id_item_discount_layout_imageview_isold"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_guoqi"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="17dp"
                            android:visibility="visible"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/id_item_discount_layout_textview_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/r1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/w0"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="16dp"
        android:layout_height="match_parent" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>