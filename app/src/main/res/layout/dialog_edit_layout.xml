<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialog_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:inputType="text"
        android:labelFor="@+id/dialog_et"
        android:paddingStart="14dp"
        android:textColor="@color/g6"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        style="@style/dividerStyle"
        android:layout_width="0dp"
        android:background="#36000000"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et"
        app:layout_constraintStart_toStartOf="@id/dialog_et"
        app:layout_constraintTop_toBottomOf="@+id/dialog_et" />

</android.support.constraint.ConstraintLayout>