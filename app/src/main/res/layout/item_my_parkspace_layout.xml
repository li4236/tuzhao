<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/w0">

    <TextView
        android:id="@+id/my_parkspace_description"
        style="@style/TwentyTextB1Style"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:text="车位描述"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_parkspace_park_location"
        style="@style/TwentyTextG6Style"
        android:layout_width="0dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="停车场"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/my_parkspace_status"
        app:layout_constraintStart_toStartOf="@id/my_parkspace_description"
        app:layout_constraintTop_toBottomOf="@+id/my_parkspace_description" />

    <ImageView
        android:id="@+id/my_parkspace_status_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/picture_description"
        android:src="@drawable/circle_green7"
        app:layout_constraintBottom_toBottomOf="@+id/my_parkspace_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_parkspace_status" />

    <TextView
        android:id="@+id/my_parkspace_status"
        style="@style/TwentyTextB1Style"
        android:layout_marginEnd="10dp"
        android:text="空闲中"
        app:layout_constraintEnd_toStartOf="@id/my_parkspace_status_iv"
        app:layout_constraintTop_toTopOf="@+id/my_parkspace_park_location" />

</android.support.constraint.ConstraintLayout>