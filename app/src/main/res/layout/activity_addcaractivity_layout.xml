<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加车牌"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_activity_addcaractivity_layout_imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_left" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="请输入车牌号码"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/id_activity_addcaractivity_layout_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="34dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确认"
            android:textColor="@color/w1"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/id_activity_addcaractivity_layout_edittext_carnumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/id_activity_addcaractivity_layout_textview_prefix"
            android:layout_below="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:background="@color/w1"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center"
            android:hint="请输入您的后5位车牌号"
            android:inputType="number"
            android:maxLength="5"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/id_activity_addcaractivity_layout_textview_prefix"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="粤A"
            android:textColor="@color/w1"
            android:textSize="15dp" />

    </RelativeLayout>

    <View
        android:id="@+id/vMasker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e0000000"
        android:visibility="gone" />


</LinearLayout>