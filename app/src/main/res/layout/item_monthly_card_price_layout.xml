<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/monthly_card_price_cl"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/stroke_y3_all_5dp">

    <TextView
        android:id="@+id/validity_period"
        style="@style/TwentyTextB1Style"
        android:layout_marginTop="10dp"
        android:textColor="@color/y3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthly_card_price"
        style="@style/TwentyTextB1Style"
        android:textColor="@color/y3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/validity_period" />

</android.support.constraint.ConstraintLayout>