<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_wallet_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/w0"
        android:gravity="center"
        android:text="我的钱包"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/id_activity_mywallet_imageview_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/picture_description"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:src="@mipmap/ic_left"
        app:layout_constraintBottom_toBottomOf="@+id/my_wallet_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_wallet_tv" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_activity_mywallet_layout_linearlayout_yue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/my_wallet_tv">

        <TextView
            android:id="@+id/my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额（元）"
            android:textColor="@color/b1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_activity_mywallet_layout_textview_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:paddingTop="25dp"
            android:text="0.00"
            android:textColor="@color/b1"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/my_account" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="@string/picture_description"
            android:src="@mipmap/ic_right"
            app:layout_constraintBottom_toBottomOf="@+id/id_activity_mywallet_layout_textview_yue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/id_activity_mywallet_layout_textview_yue" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_activity_mywallet_layout_linearlayout_yue">

        <TextView
            android:id="@+id/id_activity_mywallet_layout_linearlayout_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/ic_youhui1"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="我的优惠券"
            android:textColor="@color/b1"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_activity_mywallet_layout_linearlayout_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/ic_fapiao2"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="发票和报销"
            android:textColor="@color/b1"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/id_activity_mywallet_layout_linearlayout_discount" />

        <TextView
            android:id="@+id/id_activity_mywallet_layout_linearlayout_invoice_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/ic_mingxi3"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="开票记录"
            android:textColor="@color/b1"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/id_activity_mywallet_layout_linearlayout_invoice" />

        <TextView
            android:id="@+id/id_activity_mywallet_layout_linearlayout_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/linebottom_white_gray_shallow_1px"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/ic_mingxi3"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="账单明细"
            android:textColor="@color/b1"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/id_activity_mywallet_layout_linearlayout_invoice_situation" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>