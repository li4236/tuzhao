<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/stroke_g10_corner_7dp">

    <TextView
        android:id="@+id/rent_day"
        style="@style/TwentyTextB1Style"
        android:layout_marginStart="16dp"
        android:text="租用120天"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rent_discount"
        style="@style/TenTextB1Style"
        android:layout_marginEnd="8dp"
        android:background="@drawable/solid_green12_corner_2dp"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:textColor="@color/w0"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rent_finally_money"
        app:layout_constraintEnd_toStartOf="@+id/rent_finally_money"
        app:layout_constraintTop_toTopOf="@+id/rent_finally_money" />

    <TextView
        android:id="@+id/rent_finally_money"
        style="@style/TwentyTextB1Style"
        android:layout_marginEnd="16dp"
        android:text="¥ 0.00"
        app:layout_constraintBottom_toTopOf="@+id/rent_normal_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rent_normal_money"
        style="@style/TwentyTextG6Style"
        android:layout_marginEnd="16dp"
        android:text="¥ 0.00"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rent_finally_money" />

</android.support.constraint.ConstraintLayout>