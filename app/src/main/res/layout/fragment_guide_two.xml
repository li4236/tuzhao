<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/center_gl"
        style="@style/VerticalGuideLine"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/guide_two_floor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="58dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="771:453"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/guide_two_charge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="35dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintBottom_toBottomOf="@+id/guide_two_floor"
        app:layout_constraintDimensionRatio="385:570"
        app:layout_constraintEnd_toEndOf="@id/center_gl"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/guide_two_electric"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="9dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintBottom_toBottomOf="@+id/guide_two_floor"
        app:layout_constraintDimensionRatio="360:569"
        app:layout_constraintEnd_toEndOf="@+id/guide_two_floor"
        app:layout_constraintStart_toStartOf="@+id/center_gl" />

    <ImageView
        android:id="@+id/guide_two_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="565:69"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_two_floor" />

    <ImageView
        android:id="@+id/guide_two_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintDimensionRatio="319:45"
        app:layout_constraintEnd_toEndOf="@+id/guide_two_top"
        app:layout_constraintStart_toStartOf="@+id/guide_two_top"
        app:layout_constraintTop_toBottomOf="@+id/guide_two_top" />

</android.support.constraint.ConstraintLayout>