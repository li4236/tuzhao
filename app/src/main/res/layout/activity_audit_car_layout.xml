<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/base_tb"
        layout="@layout/base_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/top_divider"
        style="@style/dividerStyle"
        app:layout_constraintTop_toBottomOf="@+id/base_tb" />

    <ImageView
        android:id="@+id/audit_iv"
        android:layout_width="76dp"
        android:layout_height="84dp"
        android:layout_marginTop="130dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_divider" />

    <TextView
        android:id="@+id/audit_tv"
        style="@style/TenTextY3Style"
        android:layout_marginTop="34dp"
        android:text="正在审核"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audit_iv" />

    <TextView
        android:id="@+id/complete_audit_tv"
        style="@style/ThirtyTextG6Style"
        android:layout_marginTop="4dp"
        android:text="将在2-3个工作日完成审核"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audit_tv" />

    <TextView
        android:id="@+id/cancel_apply_tv"
        style="@style/TenTextY3Style"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke_y3_corner_5dp"
        android:text="取消申请"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_audit_tv" />

    <TextView
        android:id="@+id/contact_service"
        style="@style/ThirtyTextG6Style"
        android:layout_marginBottom="18dp"
        android:padding="10dp"
        android:text="如有问题，请联系客服"
        android:textColor="#66a4ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>