                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/linebottom_white_gray_shallow_1px"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="出租模式"
                        android:textColor="@color/b1"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/id_activity_add_park_layout_linearlayout_sh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/id_activity_add_park_layout_imageview_sh"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_xuanzhong5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="按时租"
                            android:textColor="@color/b1"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_activity_add_park_layout_linearlayout_sd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/id_activity_add_park_layout_imageview_sd"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/ic_weixuanzhong5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="按日租"
                            android:textColor="@color/b1"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

