                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="预约时间"
                        android:textColor="@color/b1"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/id_activity_add_park_layout_textview_installtime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="选择安装师傅上门安装时间"
                        android:padding="6dp"
                        android:textColor="@color/b1"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="温馨提示:"
                android:textColor="#939393"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="1、请填写正确的车位信息"
                android:textColor="#939393"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="2、审核期间会有客服来电专访，请保持电话畅通"
                android:textColor="#939393"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/id_activity_add_park_layout_textview_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/little_yuan_yellow_8dp"
        android:gravity="center"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"
        android:text="下一步"
        android:textColor="@color/b1"
        android:textSize="13sp"
        android:visibility="visible" />

