<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@color/w0">

    <TextView
        android:id="@+id/cancel_dialog"
        style="@style/ThirtyTextB1Style"
        android:padding="16dp"
        android:text="取消"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/FortyTextB1Style"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cancel_dialog" />

    <View
        android:id="@+id/top_divider"
        style="@style/dividerStyle"
        app:layout_constraintTop_toBottomOf="@+id/cancel_dialog" />

    <ImageView
        android:id="@+id/sample_image"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_divider" />

    <TextView
        android:id="@+id/hint_tv"
        style="@style/ThirtyTextB1Style"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="4dp"
        android:gravity="start"
        android:textColor="@color/g6"
        app:layout_constraintStart_toStartOf="@+id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/sample_image" />

    <View
        android:id="@+id/bottom_divider"
        style="@style/dividerStyle"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/hint_tv" />

    <TextView
        android:id="@+id/upload_tv"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:background="@drawable/normal_y6_to_y15_press_y7_to_y16_all_5dp"
        android:gravity="center"
        android:text="上传"
        android:textColor="@color/b1"
        app:layout_constraintEnd_toEndOf="@id/sample_image"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/sample_image"
        app:layout_constraintTop_toBottomOf="@+id/bottom_divider" />

</android.support.constraint.ConstraintLayout>