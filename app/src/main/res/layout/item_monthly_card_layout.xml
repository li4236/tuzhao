<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <com.tuzhao.publicwidget.customView.CornerImageView
        android:id="@+id/monthly_card_iv"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:contentDescription="@string/picture_description"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="893:567"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/area_monthly_card_park"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/picture_description"
        app:layout_constraintStart_toStartOf="@+id/monthly_card_iv"
        app:layout_constraintTop_toTopOf="@+id/monthly_card_iv" />

</android.support.constraint.ConstraintLayout>