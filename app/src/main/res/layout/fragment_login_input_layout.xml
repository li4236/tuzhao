<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        style="@style/TwentyTextB1Style"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:text="初次使用请绑定手机号"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_et"
        style="@style/MyEditText"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:paddingBottom="16dp"
        android:paddingStart="10dp"
        android:textColor="@color/b1"
        android:textColorHint="@color/g6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <View
        android:id="@+id/top_divider"
        style="@style/dividerStyle"
        android:layout_width="0dp"
        android:background="@color/g10"
        app:layout_constraintEnd_toEndOf="@id/input_et"
        app:layout_constraintStart_toStartOf="@id/input_et"
        app:layout_constraintTop_toBottomOf="@+id/input_et" />

    <TextView
        android:id="@+id/next_step_tv"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/normal_y6_to_y15_press_y7_to_y16_corner_5dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/b1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/input_et"
        app:layout_constraintStart_toStartOf="@id/input_et"
        app:layout_constraintTop_toBottomOf="@+id/top_divider" />

</android.support.constraint.ConstraintLayout>