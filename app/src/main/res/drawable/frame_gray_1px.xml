<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#aaaaaa"/>
        </shape>
    </item>
    <!-- 给View的上 左  右设置8dp的边框 -->
    <item android:left="2px" android:right="2px" android:bottom="2px" android:top="2px" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>