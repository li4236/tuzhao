<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!--点击之后-->
        <shape android:shape="rectangle">
            <!--四个圆角的大小设置-->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!--边框的宽度和颜色-->
            <stroke android:width="0px" android:color="@color/green1" />

            <gradient android:angle="0" android:centerColor="#f2c32d" android:endColor="#f2bf2f" android:startColor="#f2d925" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <!--常态-->
        <shape android:shape="rectangle">
            <!--四个圆角的大小设置-->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <!--边框的宽度和颜色-->
            <stroke android:width="0px" android:color="@color/green1" />

            <gradient android:angle="0" android:centerColor="#ffcd30" android:endColor="#ffc931" android:startColor="#ffe527" />
        </shape>
    </item>

</selector>