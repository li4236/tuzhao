<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_upversion_img"
            android:layout_width="270dp"
            android:layout_height="115dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_upversion"/>
        <ImageView
            android:id="@+id/id_dialog_update_layout_imageview_colse"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="-9dp"
            android:layout_alignTop="@id/id_upversion_img"
            android:layout_alignRight="@id/id_upversion_img"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delimg8"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/little_yuan_white_bl_br_5dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="升级到新版本"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#666666"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_dialog_update_layout_textview_wifi_warm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="当前是wifi环境，可放心下载！"
                    android:textColor="#47bc55"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/id_dialog_update_layout_textview_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/id_dialog_update_layout_textview_update_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/little_yuan_yellow_5dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="马上升级"
            android:textColor="#323232"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>