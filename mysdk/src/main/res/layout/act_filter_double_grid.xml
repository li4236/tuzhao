<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/filter_layout_btn_bg"
        android:layout_below="@+id/act_recyclerView"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentTop="true"
            android:background="@color/pickerview_wheelview_textcolor_divider" />

        <Button
            android:id="@+id/bta_reset"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/filter_btn_reset_style"
            android:text="重置"
            android:textColor="@color/bgColor_overlay"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btact_confirm"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/filter_btn_reset_style"
            android:text="完成"
            android:textColor="@color/bgColor_overlay"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>